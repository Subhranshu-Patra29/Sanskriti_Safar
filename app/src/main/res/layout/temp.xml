<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_test_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test English (Hello world!)" />

    <Button
        android:id="@+id/btn_test_spanish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Spanish (Hola mundo!)" />

    <Button
        android:id="@+id/btn_test_french"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test French (Bonjour le monde!)" />

</LinearLayout>
